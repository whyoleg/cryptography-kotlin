linkerOpts = -lcrypto

linkerOpts.osx = -L/opt/homebrew/opt/openssl@3/lib \
                 -L/usr/local/opt/openssl@3/lib

linkerOpts.linux = -L/home/linuxbrew/.linuxbrew/opt/openssl@3/lib \
                   -L/usr/lib64 \
                   -L/usr/lib/x86_64-linux-gnu \
                   -L/lib/x86_64-linux-gnu

linkerOpts.mingw = -LC:/msys64/mingw64/lib \
                   -LC:/Tools/msys64/mingw64/lib \
                   -LC:/Tools/msys2/mingw64/lib
